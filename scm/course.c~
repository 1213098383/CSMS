#include <stdio.h>
#include <string.h>
#include <stdlib.h>
void initcourse();//课程初始化
void add();//增加课程
void delete();//删除课程
void view();//查看课程
void modify();//修改课程
void init2(char* f);//课程初始化
void addcor(char* s);//add
void delcor(char *s);//del1
void delcor2(char* s);//del2
void modco(char* cnum,char* s);//mod1
void nodco2(char* cname,char*s);//mod2
void modco2(char* cname,char* s)
{
    FILE* f=fopen("scm/infoco.txt","r");
    FILE* copy=fopen("scm/copy.txt","w");
    char num[8],bf[100];
    while(fgets(bf,100,f)!=NULL){
        int i,j=0,k=0;
        for(int i=0;i<strlen(bf);i++){
            if(bf[i]==' '){
                j++;
                continue;
            }
            if(j==2){
                break;
            }
            if(j==1){
                num[k]=bf[i];
                num[k+1]='\0';
                k++;
            }
        }
        if(strcmp(cname,num)==0){
            for(i=0;i<strlen(s);i++){
                bf[i]=s[i];
            }
            bf[i]='\0';
        }
        fprintf(copy,"%s",bf);
    }
    fclose(f);
    fclose(copy);
    f=fopen("scm/infoco.txt","w");
    copy=fopen("scm/copy.txt","r");
    while(fgets(bf,100,copy)!=NULL){
        fprintf(f,"%s",bf);
    }
    fclose(f);
    fclose(copy);
}
void modco(char* cnum,char* s)
{
    FILE* f=fopen("scm/infoco.txt","r");
    FILE* copy=fopen("scm/copy.txt","w");
    char num[8],bf[100];
    while(fgets(bf,100,f)!=NULL){
        for(int i=0;i<strlen(bf);i++){
            if(bf[i]==' '){
                break;
            }
            num[i]=bf[i];
            num[i+1]='\0';
        }
        if(strcmp(cnum,num)==0){
            int i;
            for(i=0;i<strlen(s);i++){
                bf[i]=s[i];
            }
            bf[i]='\0';
        }
        fprintf(copy,"%s",bf);
    }
    fclose(f);
    fclose(copy);
    f=fopen("scm/infoco.txt","w");
    copy=fopen("scm/copy.txt","r");
    while(fgets(bf,100,copy)!=NULL){
        fprintf(f,"%s",bf);
    }
    fclose(f);
    fclose(copy);
}
void delcor2(char* s)
{
    FILE* f=fopen("scm/infoco.txt","r");
    FILE* copy=fopen("scm/copy.txt","w");
    char bf[100],num[7];
    while(fgets(bf,100,f)!=NULL){
        int k=0,j=0;
        for(int i=0;i<strlen(bf);i++){
            if(bf[i]==' '){
                j++;
                continue;
            }
            if(j==2){
                break;
            }
            if(j==1){
                num[k]=bf[i];
                num[k+1]='\0';
                k++;
            }
        }
        if(strcmp(num,s)==0){
            continue;
        }
        fprintf(copy,"%s",bf);
    }
    fclose(f);
    fclose(copy);
    f=fopen("scm/infoco.txt","w");
    copy=fopen("scm/copy.txt","r");
    while(fgets(bf,100,copy)!=NULL){
        fprintf(f,"%s",bf);
    }
    fclose(f);
    fclose(copy);
}
void delcor(char *s)
{
    FILE* f=fopen("scm/infoco.txt","r");
    FILE* copy=fopen("scm/copy.txt","w");
    char bf[100],num[10];
    while(fgets(bf,100,f)!=NULL){
        int i=0;
        for(i=0;i<strlen(bf);i++){
            if(bf[i]==' ')
                break;
            num[i]=bf[i];
        }
        num[i]='\0';
        if(strcmp(num,s)==0){
            continue;
        }
        fprintf(copy,"%s",bf);
    }
    fclose(f);
    fclose(copy);
    f=fopen("scm/infoco.txt","w");
    copy=fopen("scm/copy.txt","r");
    while(fgets(bf,100,copy)!=NULL){
        fprintf(f,"%s",bf);
    }
    fclose(f);
    fclose(copy);
}
void addcor(char *s)
{
    FILE* f=fopen("scm/infoco.txt","a");
    fprintf(f,"%s",s);
    fclose(f);
}
void init2(char *f)
{
        FILE *info=fopen("scm/infoco.txt","w");
        FILE *ff=fopen(f,"r");
        char bf[100];
        while(fgets(bf,100,ff)!=NULL){
            fprintf(info,"%s",bf);
        }
        fclose(info);
        fclose(ff);
}
//新增课程，删除课程，查看某课程详细信息（学分，课时，所选学生列表等），修改某课程的信息（学分，课时，所选学生列表等）
void add()
{
    FILE* f=fopen("infoco.txt","a");
    int x=1;
    while(x==1){
        printf("\n输入课程信息请输入1\n否则其他\n");
        scanf("%d",&x);
        if(x!=1)
            break;
        printf("\n请按照‘编号 名称 性质 学时 学分 已选人数 最大人数’的格式输入\n");
        printf("\n请输入课程信息：");
        char bf[100];
        fflush(stdin);
        fgets(bf,100,stdin);
        fprintf(f,"%s\n",bf);
        }
}
void delete()
{
    printf("请输入要删除的课程编号：");
    int del;
    scanf("%d",&del);
    FILE* copy=fopen("copy.txt","w+");
    FILE* f=fopen("infoco.txt","r");
    char bf[100],num[5];
    while(fgets(bf,100,f)!=NULL){
        for(int i=0;i<strlen(bf);i++){
            if(bf[i]==' ')
                break;
            num[i]=bf[i];
        }
        int nnum=atoi(num);
        if(nnum==del){
            fgets(bf,100,f);
            continue;
        }
        fprintf(copy,"%s",bf);
    }
    fclose(copy);
    fclose(f);
    copy=fopen("copy.txt","r");
    f=fopen("infoco.txt","w+");
    while(fgets(bf,100,copy)!=NULL){
        fprintf(f,"%s",bf);
    }
    fclose(f);
    fclose(copy);
}
void view()
{
    printf("请输入要查看的课程编号：");
    int view;
    char num[5],bf[100];
    scanf("%d",&view);
    FILE* f=fopen("infoco.txt","r");
    while(fgets(bf,100,f)!=NULL){
        for(int i=0;i<strlen(bf);i++){
            if(bf[i]==' ')
                break;
            num[i]=bf[i];
        }
        int nnum=atoi(num);
        if(nnum==view){
            printf("\n%s\n",bf);
            break;
        }
    }
    fclose(f);
}
void modify()
{
    printf("请输入要修改的课程编号：");
    int mod;
    char num[5],bf[100];
    scanf("%d",&mod);
    FILE* f=fopen("infoco.txt","r");
    FILE* copy=fopen("copy.txt","w");
    while(fgets(bf,100,f)!=NULL){
        for(int i=0;i<strlen(bf);i++){
            if(bf[i]==' ')
                break;
            num[i]=bf[i];
        }
        int nnum=atoi(num);
        if(nnum==mod){
            printf("\n请按照‘编号 名称 性质 学时 学分 已选人数 最大人数’的格式输入修改的信息：");
            fflush(stdin);
            fgets(bf,100,stdin);
        }
        fprintf(copy,"%s",bf);
    }
    fclose(f);
    fclose(copy);
    f=fopen("infoco.txt","w");
    copy=fopen("copy.txt","r");
    while(fgets(bf,100,copy)!=NULL){
        fprintf(f,"%s",bf);
    }
    fclose(f);
    fclose(copy);
    f=fopen("coustu.txt","r");
    copy=fopen("copy.txt","w");
    while(fgets(bf,100,f)!=NULL){
        for(int i=0;i<strlen(bf);i++){
            if(bf[i]==' ')
                break;
            num[i]=bf[i];
        }
        int nnum=atoi(num);
        if(nnum==mod){
            printf("\n请按照‘101 语文 所选学生（方方，陶陶，苏苏，唐唐，孙孙）’的格式输入修改的信息：");
            fflush(stdin);
            fgets(bf,100,stdin);
        }
        fprintf(copy,"%s",bf);
    }
    fclose(f);
    fclose(copy);
    f=fopen("coustu.txt","w");
    copy=fopen("copy.txt","r");
    while(fgets(bf,100,copy)!=NULL){
        fprintf(f,"%s",bf);
    }
    fclose(f);
    fclose(copy);
}
